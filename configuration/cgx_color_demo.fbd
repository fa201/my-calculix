# Color the element and node sets.
# For elements, the color label is attached to a node.
# The view should not be changed.

read cgx_color_demo.inp inp

# Disable edge
view edge off
# Align the view to get color label render properly.
rot z
rot c 270

# CGX standard colors
plot e E1 r
txt 7 n -0.03 0.03 "red"
plus e E2 g
txt 15 n -0.06 -0.04 "green"
plus e E3 b
txt 23 n -0.03 0.03 "blue"
plus e E4 m
txt 31 n -0.05 -0.08 "magenta"
plus e E5 y
txt 39 n -0.05 0.06 "yellow"
plus e E6 t
txt 47 n -0.06 -0.04 "turquoise"
plus e E7 n
txt 55 n -0.05 0.03 "neutral"
plus e E8 w
txt 63 n -0.05 -0.08 "white"
plus e E9 k
txt 71 n -0.03 0.08 "black"

# My colors

col pink 1 0.45 0.7
plus e E10 pink
txt 79 n -0.05 -0.04 "pink"
col orange 0.75 0.5 0
plus e E11 orange
txt 87 n -0.05 0.03 "orange"
col darkgreen 0 0.3 0
plus e E12 darkgreen
txt 95 n -0.06 -0.08 "darkgreen"
col seagreen 0.18 0.55 0.34
