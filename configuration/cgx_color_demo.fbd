txt 103 n -0.06 0.08 "seagreen"
col olive 0.5 0.5 0
plus e E14 olive
txt 111 n -0.06 -0.04 "olive"
col skyblue 0 0.5 1
plus e E15 skyblue
txt 119 n -0.06 0.03 "skyblue"
col brown 0.5 0.25 0.07
plus e E15 brown
txt 119 n -0.06 0.03 "brown"
col violet 0.5 0 0.93
